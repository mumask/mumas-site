<script>
  // Clock update
  function updateClock() {
    const clock = document.getElementById('clock');
    const now = new Date();

    // Format HH:MM:SS
    let h = now.getHours();
    let m = now.getMinutes();
    let s = now.getSeconds();

    h = h < 10 ? '0' + h : h;
    m = m < 10 ? '0' + m : m;
    s = s < 10 ? '0' + s : s;

    clock.textContent = `${h}:${m}:${s}`;

    // Change background color gradient based on time (day: 6-18, night: 18-6)
    const container = document.getElementById('app-container');
    if(h >= 6 && h < 18) {
      // Day: warm gradient
      document.body.style.animation = 'backgroundShiftDay 30s ease infinite';
      container.classList.remove('night');
      document.body.style.background = 'linear-gradient(135deg, #ff8a00, #e52e71)';
      document.body.style.backgroundSize = '600% 600%';
    } else {
      // Night: cool gradient
      document.body.style.animation = 'backgroundShiftNight 30s ease infinite';
      container.classList.add('night');
      document.body.style.background = 'linear-gradient(135deg, #001f3f, #003366)';
      document.body.style.backgroundSize = '600% 600%';
    }
  }

  setInterval(updateClock, 1000);
  updateClock();

  // Accordion functionality
  const accordionHeaders = document.querySelectorAll('.accordion-header');
  accordionHeaders.forEach(header => {
    header.addEventListener('click', () => {
      const content = header.nextElementSibling;
      const arrow = header.querySelector('.accordion-arrow');
      const isOpen = content.classList.contains('open');

      // Close all others
      document.querySelectorAll('.accordion-content.open').forEach(openContent => {
        if(openContent !== content) {
          openContent.classList.remove('open');
          openContent.previousElementSibling.querySelector('.accordion-arrow').classList.remove('open');
        }
      });

      if(isOpen) {
        content.classList.remove('open');
        arrow.classList.remove('open');
      } else {
        content.classList.add('open');
        arrow.classList.add('open');
      }
    });
    header.addEventListener('keydown', e => {
      if(e.key === 'Enter' || e.key === ' ') {
        e.preventDefault();
        header.click();
      }
    });
  });

  // CSS animations for background gradients day/night
  const styleSheet = document.createElement("style");
  styleSheet.type = "text/css";
  styleSheet.innerText = `
    @keyframes backgroundShiftDay {
      0%{background-position:0% 50%;}
      50%{background-position:100% 50%;}
      100%{background-position:0% 50%;}
    }
    @keyframes backgroundShiftNight {
      0%{background-position:0% 50%;}
      50%{background-position:100% 50%;}
      100%{background-position:0% 50%;}
    }
  `;
  document.head.appendChild(styleSheet);
</script>
</body>
